<div class="container">
  <div class="row">

    <h1>Log In</h1>
    <br>
    <%= form_tag sessions_path do %>
    <div class="form-group form-group-lg">
      <div class="field">
        <h4><%= label_tag :email %></h4><br>
        <div class="col-xs-6">
          <%= text_field_tag :email, '', class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="field">
        <h4><%= label_tag :password %></h4><br>
        <div class="col-xs-6">
          <%= password_field_tag :password, '', class: "form-control" %>
        </div>
      </div>
      <br>
      <br>
      <div class="actions">
        <%= submit_tag "Log In", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>