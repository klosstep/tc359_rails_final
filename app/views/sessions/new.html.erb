<div class="container">
  <div class="row">

    <h1>Log In</h1>
    <br>
    
    <%= simple_form_for sessions_path do |f| %>
    <div class="form-group form-group-lg">
      <div class="col-xs-6">
        <div class="field">
         <h4><%= f.input :email, label: 'Email', input_html: { class: 'form-control' } %></h4>
        </div>
        <div class="field">
          <h4><%= f.input :password, label: 'Password', input_html: { class: 'form-control' } %></h4>
        </div>
        <div class="actions">
          <%= submit_tag "Log In", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    
    <% end %>
  </div>
</div>