<div class="container">
  <div class="row">

    <%= simple_form_for (@pokemon) do |f| %>
      <% if @pokemon.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

          <ul>
          <% @pokemon.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-xs-3">
        <div class="field">
          <%= f.input :number, label: 'Number' %>
        </div>
        <br>
        <div class="field">
          <%= f.input :name, label: 'Name' %>
        </div>
        <br>
        <div class="field">
          <%= f.input :breed, :collection => ['Fire', 'Grass', 'Water', 'Psychic', 'Dark', 'Fighting', 'Fairy', 'Bug', 'Ice', 'Electric', 'Flying', 'Steel', 'Normal', 'Rock', 'Ground', 'Dragon', 'Ghost', 'Poison' ].sort %>
        </div>
        <br>
        <div class="field">
          <%= f.input :tier, label: 'Tier' %>
        </div>
        <br>
        <div class="field">
          <%= f.input :final_evolution, label: 'Final Evolution?' %>
        </div>
        <br>
        <div class="actions">
           <%= f.submit "Create Pokemon", class: "btn btn-primary" %>
        </div>
        <br>
      </div>
    <% end %>
    
  </div>
</div>
